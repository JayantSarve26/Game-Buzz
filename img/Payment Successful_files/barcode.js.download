var WEIGHTS = [212222, 222122, 222221, 121223, 121322, 131222, 122213, 122312, 132212, 221213, 221312, 231212, 112232, 122132, 122231, 113222, 123122, 123221, 223211, 221132, 221231, 213212, 223112, 312131, 311222, 321122, 321221, 312212, 322112, 322211, 212123, 212321, 232121, 111323, 131123, 131321, 112313, 132113, 132311, 211313, 231113, 231311, 112133, 112331, 132131, 113123, 113321, 133121, 313121, 211331, 231131, 213113, 213311, 213131, 311123, 311321, 331121, 312113, 312311, 332111, 314111, 221411, 431111, 111224, 111422, 121124, 121421, 141122, 141221, 112214, 112412, 122114, 122411, 142112, 142211, 241211, 221114, 413111, 241112, 134111, 111242, 121142, 121241, 114212, 124112, 124211, 411212, 421112, 421211, 212141, 214121, 412121, 111143, 111341, 131141, 114113, 114311, 411113, 411311, 113141, 114131, 311141, 411131, 211412, 211214, 211232, 2331112];

//6 digit representation of a character
function getWeights(ch)
{
	return WEIGHTS[getValue(ch)];
}

//ASCII - 32 = Code 128 Value
function getValue(ch)
{
	return ch.charCodeAt(0)-32;
}

function getBarcodeFormat(text)
{
	var sum = 104;

	//Start Character
	var barcode = "" + WEIGHTS[104];

	if(text!=undefined && text!="undefined")
	{
		for(var i = 0; i < text.length; i++)
		{
			var ch = text.charAt(i);
			
			//Character
			barcode += getWeights(ch);
	
			//Calculation for check character
			sum += (getValue(ch) * (i+1));
		}
	}
	//Check character
	barcode += WEIGHTS[sum % 103];
	
	//Stop Character
	barcode += WEIGHTS[106];

	return barcode;
}

function getBarcodeImage(format)
{
	var html = "";

	for(var i = 0; i < format.length; i++)
	{
		var ch = format.charAt(i);
		
		//if(i % 2 == 0)
		//	html += "<div class=\"barcode\" style=\"width:" + ch + "px;\"></div>";
		//else
		//	html += "<div class=\"barcode\" style=\"background-color:White; width:" + ch + "px;\"></div>";

		if(i % 2 == 0)
			html += "<div class=\"barcode\" id=\"B" + ch + "\"></div>";     //<div class="barcode" id="B1"></div>
		else
			html += "<div class=\"barcode\" id=\"W" + ch + "\"></div>";		//<div class="barcode" id="W3"></div>
	}
	//alert("Barcode Format: "+html);
	return html;
}

function getBarcode(text, controlId) {
	//alert("in barcode"+text);
	//alert("in barcode"+controlId);
	var format = getBarcodeFormat(text);
	if(document.getElementById(controlId) != null)
	document.getElementById(controlId).innerHTML = getBarcodeImage(format);
	
	//$('#'+controlId).html('<img src="getBarcodeImageById.htm?id='+text+'">');
	
}



function getBarcodeFromControl(textId, controlId)
{
	//alert("In barcode form control");
	var format = getBarcodeFormat(document.getElementById(textId).value);
	document.getElementById(controlId).innerHTML = getBarcodeImage(format);
}


function getQueryVariable(variable) { 
	var query = window.location.search.substring(1); 
	var vars = query.split("&"); 
	for (var i=0;i<vars.length;i++) { 
		var pair = vars[i].split("="); 
		if (pair[0] == variable) { 
			return pair[1]; 
		} 
	} 
	alert('Query Variable ' + variable + ' not found'); 
}